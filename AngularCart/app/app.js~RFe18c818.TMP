



    'use strict';
    var ng = angular;

    var moduleName = 'ShoppingCart';
    //1.create the module
    ng.module(moduleName, []);


    //2.next, configure the routes in our application
    ng.module(moduleName).config([
        '$routeProvider', function ($routeProvider) {

            $routeProvider.when('/products', {
                templateUrl: 'app/partials/product-listing.html',
                controller: 'productListingController'
            });

           $routeProvider.otherwise({ redirectTo: '/products' });

        }
    ]);

    ng.module(moduleName).controller('productListingController', [
        '$scope', function ($scope) {

            $scope.products = [
                {
                    id: 1,
